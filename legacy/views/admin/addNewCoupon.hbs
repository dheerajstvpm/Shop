<div class="container minHeight">
  <div class="d-flex justify-content-between my-3">
    <h1 class="mt-5">Add New Coupon</h1>
  </div>

  <form action="/admin/addNewCoupon" method="post">
    <div class="row my-3">
      <label for="coupon" class="col-md-2 col-form-label">Coupon name</label>
      <div class="col-md-3">
        <input type="text" name="coupon" class="form-control" id="coupon" />
      </div>
      <div class="col-md-4" role="alert">
        {{couponMsg}}
      </div>
    </div>

    <div class="row my-3">
      <label for="reduction" class="col-md-2 col-form-label">Reduction</label>
      <div class="col-md-3">
        <input
          type="text"
          name="reduction"
          class="form-control"
          id="reduction"
        />
      </div>
      <div class="col-md-4" role="alert">
        {{reductionMsg}}
      </div>
    </div>

    <div class="row my-3">
      <label for="minOrder" class="col-md-2 col-form-label">Minimum order</label>
      <div class="col-md-3">
        <input type="text" name="minOrder" class="form-control" id="minOrder" />
      </div>
      <div class="col-md-4" role="alert">
        {{minOrderMsg}}
      </div>
    </div>

    <div class="row my-3">
      <label for="expiry" class="col-md-2 col-form-label">Expiry date</label>
      <div class="col-md-3">
        <input type="date" name="expiry" class="form-control" id="expiry" />
      </div>
      <div class="col-md-4" role="alert">
        {{expiryMsg}}
      </div>
    </div>

    <button type="submit" class="btn btn-dark mb-3">Add coupon</button>
  </form>
</div>