<h1 class="mt-5 d-flex justify-content-center">Login</h1>
<div class="container-fluid d-flex justify-content-center">
    <form class="col-md-4" action="/login" method="post">
        <div class="my-3">
            <input type="email" class="form-control text-center" id="exampleInputEmail" placeholder="Username"
                aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <input type="password" class="form-control text-center" id="exampleInputPassword" placeholder="Password">
        </div>
        <div class='mb-3 d-flex justify-content-center'>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="my-3 d-flex justify-content-center">
            <a href="/signup">Create an account</a>
        </div>
    </form>
</div>