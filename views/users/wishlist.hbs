    <div class="d-flex mb-3">
        <table class=" table table-borderless">
            <thead>
                <tr class="d-flex justify-content-between align-items-center mt-5">
                    <th class="text-center">Sl.</th>
                    <th class="text-center">Image</th>
                    <th class="text-center">Product Name</th>
                    <th class="text-center">Price</th>
                    <td class="text-center"><a href="/removeFromWishlist/{{this._id}}" class="btn btn-outline-danger"></a></td>
                </tr>
            </thead>
            <tbody>
                {{#each result.wishlist}}
                <tr class="d-flex justify-content-between align-items-center mt-5">
                    <th scope="row" class="text-center">{{addOne @index}}</th>
                    <td class="text-center"><img src="{{this.image}}" alt="image" style="width: 5rem; height: 5rem"></td>
                    <td class="text-center">{{this.productName}}</td>
                    <td class="text-center">{{this.price}}</td>
                    <td class="text-center"><a href="/removeFromWishlist/{{this._id}}" class="btn btn-outline-danger">Remove from wishlist</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
