    <div class="d-flex flex-column  mb-3">
        <table id="table_id" class=" table">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Sl.</th>
                    <th scope="col" class="text-center">Product Name</th>
                    <th scope="col" class="text-center">Price</th>
                    <th scope="col" class="text-center">No.of items</th>
                    <th scope="col" class="text-center">Total</th>
                    <th scope="col" class="text-center">Status</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each result}}
                <tr>
                    {{!-- <th scope="row" class="text-center">{{addOne @index}}.</th> --}}
                    <td class="text-center"><img src="/images/image1{{this._id}}.jpg" alt="image"
                            style="width: 5rem; height: 5rem; object-fit: contain;">
                    </td>
                    <td class="text-center"><br>{{this.productName}}</td>
                    <td class="text-center"><br>&#x20B9;{{this.price}}</td>
                    <td class="text-center"><br>{{this.count}}</td>
                    <td class="text-center"><br>&#x20B9;{{multiply this.price this.count}}</td>
                    <td class="text-center"><br>Ordered on {{dateFormat createdAt}}<br>{{orderStatus}}</td>
                    {{#if cancelBtn}}
                    <td class="text-center"><br><a href="/cancelOrder/{{this.unique}}" class="shadow btn btn-dark">Cancel</a>
                    </td>
                    {{else}}
                    {{#if returnBtn}}
                    <td class="text-center"><br><a href="/returnOrder/{{this.unique}}" class="shadow btn btn-dark">Return</a>
                    </td>
                    {{else}}
                    <td class="text-center"><br></td>
                    {{/if}}
                    {{/if}}


                </tr>
                {{/each}}
                {{!-- <tr>
                    <th scope="row" class="text-center"></th>
                    <td class="text-center"></td>
                    <td class="text-center"></td>
