<div class="container minHeight">

    <div class="d-flex justify-content-between border-bottom my-3">
        <div class="text-danger fw-bold">{{message}}</div>
        <h1>Profile</h1>
    </div>



    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane"
                type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Mobile number</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane"
                type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Profile Name</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane"
                type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Addresses</button>

        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password-tab-pane"
                type="button" role="tab" aria-controls="password-tab-pane" aria-selected="false">Password</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab"
            tabindex="0">


            <div class="d-flex justify-content-center my-3">
                <h3 class="mt-2 text-center">Change your mobile number</h3>
            </div>
            <div class="container-fluid d-flex justify-content-center">
                <form action="/mobileEdit/" class="col-md-4" method="post">
                    <input type="text" name="newMobile" class="form-control text-center" id="newMobile"
                        value="{{result.mobile}}">
                    <div class='mb-3 d-flex justify-content-center'>
                        <button type="submit" class="shadow-lg btn btn-outline-dark my-3">Update</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">

            <div class="d-flex justify-content-center my-3">
                <h3 class="mt-2 text-center">Change your profile name</h3>
            </div>
            <div class="container-fluid d-flex justify-content-center">
                <form action="/nameEdit/" class="col-md-4" method="post">
                    <input type="text" name="newName" class="form-control text-center" id="newName"
                        value="{{result.name}}">
                    <div class='mb-3 d-flex justify-content-center'>
                        <button type="submit" class="shadow-lg btn btn-outline-dark my-3">Update</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">

            <div class="d-flex justify-content-around">
                <div>
                    <div class="d-flex justify-content-center my-3">
                        <h3 class="mt-2 text-center">Update existing addresses:</h3>
                    </div>

                    {{#each result.address}}
                    <div class="container-fluid d-flex justify-content-center">
                        <form action="/addressEdit/{{this}}" class="mt-2 col-md-12" method="post">
                            <input type="text" name="newAddress" class="form-control text-center" id="newAddress"
                                value="{{this}}">
                            <div class='mb-3 d-flex justify-content-center'>
                                <button type="submit" class="shadow-lg btn btn-outline-dark my-3">Update</button>
                                {{!-- <button type="submit" class="shadow-lg btn btn-outline-dark my-3">Delete</button> --}}
                                <a href="/addressDelete/{{this}}" class="shadow-lg btn btn-outline-danger ms-2 my-3"
                                    onclick="return confirm('Are you sure, you want to delete this address?')">Delete</a>
                            </div>
                        </form>
                    </div>
                    {{/each}}
                </div>
                <div>
                    <div class="d-flex justify-content-center my-3">
                        <h3 class="mt-2 text-center">Add new address:</h3>
                    </div>
                    <div class="container-fluid d-flex justify-content-center">
                        <form action="/addAddress/" class="mt-2" method="post">
                            <textarea name="newAddress" id="newAddress" cols="30" rows="3"></textarea>
                            <br>
                            <div class='mb-3 d-flex justify-content-center'>
                                <button type="submit" class="shadow-lg btn btn-outline-dark my-3"
                                    style="width: 80px;">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <div class="tab-pane fade" id="password-tab-pane" role="tabpanel" aria-labelledby="password -tab" tabindex="0">

            {{!-- <a href="/changePassword" class="mt-3 link-dark">Change your password</a> --}}

            <div class="d-flex justify-content-center my-3">
                <h3 class="mt-2 text-center">Change your Password</h3>
            </div>

            <div class="container-fluid d-flex justify-content-center">
                <form class="col-md-12" action="/changePassword" method="post">

                    <div class="mb-3 d-flex justify-content-center">
                        <div class="col-md-4"></div>
                        <input type="password" name="password" class="form-control text-center"
                            id="exampleInputPassword" placeholder="New password">
                        <div class="col-md-4 text-start ps-2 pt-2 text-danger">{{pwdMsg}}</div>
                    </div>
                    <div class="mb-3 d-flex justify-content-center">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            (Password must contain atleast eight characters, one small letter, one capital letter, one
                            number
                            and one special character)
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <div class="mb-3 d-flex justify-content-center">
                        <div class="col-md-4"></div>
                        <input type="password" name="confirmPassword" class="form-control text-center"
                            id="exampleInputConfirmPassword" placeholder="Confirm Password">
                        <div class="col-md-4 text-start ps-2 pt-2 text-danger">{{confirmPwdMsg}}</div>
                    </div>
                    <div class='d-flex justify-content-center'>
                        <button type="submit" class="shadow-lg btn btn-outline-dark">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>