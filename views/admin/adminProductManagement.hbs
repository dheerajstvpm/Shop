    <div class="d-flex justify-content-end">
        <a href="/admin/addNewProduct" class="btn btn-dark mb-3">Add new product</a>
    </div>
    <div class="d-flex flex-column mb-3">
        <table class=" table" id="table_id">
            <thead>
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each result}}
                <tr>
                    <th scope="row">{{addOne @index}}</td>
                    <td>{{this.productName}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>
                        <a href="/admin/editProduct/{{this._id}}" class="btn btn-outline-success"
                            onclick="return confirm('Are you sure, you want to edit details of product :{{this.productName}}?')">edit</a>
                    </td>
                    <td>
                        <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure, you want to delete product :{{this.productName}}?')">delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
</div>