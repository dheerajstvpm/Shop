    <div class="d-flex justify-content-end">
        <a href="/admin/addNewCategory" class="btn btn-dark mb-3">Add new category</a>
    </div>
    <div class="d-flex flex-column mb-3">
        <table class=" table" id="table_id">
            <thead>
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Category</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each newArray}}
                <tr>
                    <th scope="row">{{addOne @index}}</td>
                    <td>{{categoryName}}</td>
                    <form action="/admin/adminCategoryOfferUpdate/{{categoryName}}" method="post">
                        <td class="text-center">
                            <select name="offer" id="offer" style="width: 200px;">
                                <option selected disabled>Add offer to category</option>
                                {{#each offerResult}}
                                <option value="{{offerName}}">{{offerName}}</option>
                                {{/each}}
                            </select>
                        </td>
                        <td class="text-center"><button type="submit" class="btn btn-outline-success">Update</button>
                        </td>
                    </form>
                    <td>
                        <a href="/admin/deleteCategory/{{this.categoryName}}" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure, you want to delete category :{{this.category}}?')">delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
        <tr>
            <th colspan="5">
                <div class="text-danger">{{categoryMsg}}</div>
            </th>
        </tr>
    </div>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
</div>