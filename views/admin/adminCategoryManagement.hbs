<div class="container">

    <div class="d-flex justify-content-between my-3">
        <h1 class="">Category Management</h1>
        <form action="/admin/adminLogout" method="post" class="">
            <button type="submit" class="btn btn-primary">Logout</button>
        </form>
    </div>

    <form action="/admin/adminCategorySearch" method="post" class="d-flex mb-3">
        <div>
            <button type="submit" class="btn btn-primary me-1">Search</button>
        </div>
        <div class="flex-grow-1 mb-3">
            <div>
                <input type="text" name="input" class="form-control" placeholder="Search with category"
                    id="searchInput">
            </div>
        </div>
    </form>

    <div class="d-flex justify-content-end">
        <a href="/admin/addNewCategory" class="btn btn-dark mb-3">Add new category</a>
    </div>

    <div class="d-flex mb-3">
        <table class=" table">
            <thead>
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Category</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each result}}
                <tr>
                    <th scope="row">{{addOne @index}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        <a href="/admin/editCategory/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure, you want to edit category:{{this.category}}?')">edit</a>
                    </td>
                    <td>
                        <a href="/admin/deleteCategory/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure, you want to delete category :{{this.category}}?')">delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>