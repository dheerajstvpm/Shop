<div class="container minHeight">

    <div class="d-flex justify-content-between my-3">
        <h1>User Management</h1>
        <form action="/admin/adminLogout" method="post">
            <button type="submit" class="btn btn-dark">Logout</button>
        </form>
    </div>

    <form action="/admin/adminUserSearch" method="post" class="d-flex mb-3">
        <div>
            <button type="submit" class="btn btn-dark me-1">Search</button>
        </div>
        <div class="flex-grow-1 mb-3">
            <div>
                <input type="text" name="input" class="form-control" placeholder="Search with name or username"
                    id="searchInput">
            </div>
        </div>
    </form>

    <div class="d-flex mb-3">
        <table class=" table">
            <thead>
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each result}}
                <tr>
                    <th scope="row">{{addOne @index}}</td>
                    <td><a href="/admin/orderManagement/{{this._id}}" class="text-decoration-none">{{this.name}}</a>
                    </td>
                    <td>{{this.username}}</td>
                    {{#if this.status}}
                    <td>
                        <a href="/admin/unblock/{{this._id}}" class="btn btn-outline-success"
                            onclick="return confirm('Are you sure, you want to unblock user :{{this.name}}?')">unblock</a>
                    </td>
                    {{else}}
                    <td>
                        <a href="/admin/block/{{this._id}}" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure, you want to block user:{{this.name}}?')">block</a>
                    </td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>