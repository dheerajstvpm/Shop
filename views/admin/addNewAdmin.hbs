<div class="container minHeight">
  {{! <h1 class="mt-5 d-flex justify-content-center">Add new admin</h1> }}
  <div class="d-flex justify-content-between my-3 border-bottom">
    <h1>Add new admin</h1>
    <form action="/admin/adminLogout" method="post">
      <button type="submit" class="btn btn-dark">Logout</button>
    </form>
  </div>
  <div class="container-fluid d-flex justify-content-center">
    <form class="col-md-4" action="/admin/addNewAdmin" method="post">

      <div class="my-3">
        <input
          type="text"
          name="username"
          class="form-control text-center"
          id="exampleInputEmail"
          placeholder="Username"
          aria-describedby="emailHelp"
        />
        <p class="text-center text-danger">{{usernameMsg}}</p>
      </div>
      <div class="mb-3">
        <input
          type="password"
          name="password"
          class="form-control text-center"
          id="exampleInputPassword"
          placeholder="Password"
        />
        <p class="text-center text-danger">{{pwdMsg}}</p>
      </div>
      <div class="mb-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-dark">Add new admin</button>
      </div>
    </form>
  </div>
</div>