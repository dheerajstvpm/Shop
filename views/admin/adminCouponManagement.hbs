    <div class="d-flex justify-content-end">
        <a href="/admin/addNewCoupon" class="btn btn-dark mb-3">Add new coupon</a>
    </div>

    <div class="d-flex flex-column mb-3">
        <table class=" table" id="table_id">
            <thead>
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Coupon</th>
                    <th scope="col">Reduction</th>
                    <th scope="col">Minimum order</th>
                    <th scope="col">Expiry</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each result}}
                <tr>
                    <th scope="row">{{addOne @index}}</td>
                    <td>{{this.coupon}}</td>
                    <td>{{this.reduction}}</td>
                    <td>{{this.minOrder}}</td>
                    <td>{{dateFormat this.expiry}}</td>
                    <td>
                        <a href="/admin/editCoupon/{{this._id}}" class="btn btn-outline-success"
                            onclick="return confirm('Are you sure, you want to edit coupon:{{this.coupon}}?')">edit</a>
                    </td>
                    <td>
                        <a href="/admin/deleteCoupon/{{this._id}}" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure, you want to delete coupon :{{this.coupon}}?')">delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>    
</div>