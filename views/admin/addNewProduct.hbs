<div class="container minHeight">
    <div class="d-flex justify-content-between my-3">
        <h1 class="mt-5">Add New Product</h1>
    </div>


    <form action="/admin/addNewProduct" method="post">
        <div class="row my-3">
            <label for="product" class="col-md-1 col-form-label">Product Name</label>
            <div class="col-md-3">
                <input type="text" name="productName" class="form-control" id="product">
            </div>
            <div class="col-md-4" role="alert">
                {{productNameMsg}}
            </div>
        </div>
        <div class="row my-3">
            <label for="description" class="col-md-1 col-form-label">Description</label>
            <div class="col-md-3">
                <textarea type="text" name="description" class="form-control" id="description"></textarea>
            </div>
            <div class="col-md-4" role="alert">
                {{descriptionMsg}}
            </div>
        </div>
        <div class="row my-3">
            <label for="price" class="col-md-1 col-form-label">Price</label>
            <div class="col-md-3">
                <input type="text" name="price" class="form-control" id="price">
            </div>
            <div class="col-md-4" role="alert">
                {{priceMsg}}
            </div>
        </div>
        <div class="row my-3">
            <label for="stock" class="col-md-1 col-form-label">Stock</label>
            <div class="col-md-3">
                <input type="text" name="stock" class="form-control" id="stock">
            </div>
            <div class="col-md-4" role="alert">
                {{stockMsg}}
            </div>
        </div>
        <div class="row my-3">
            <label for="image" class="col-md-1 col-form-label">Image</label>
            <div class="col-md-3">
                <input type="text" name="image" class="form-control" id="image">
            </div>
            <div class="col-md-4" role="alert">
                {{imageMsg}}
            </div>
        </div>
        <div class="row my-3">
            <label for="category" class="col-md-1 col-form-label">Choose a category</label>
            <div class="col-md-3">
                {{!-- <input type="text" name="category" class="form-control" id="category"> --}}

                <select name="category" id="category" style="width: 250px;">
                    {{#each categoryResult}}
                    <option value="{{categoryName}}">{{categoryName}}</option>
                    {{/each}}
                </select>

            </div>
            <div class="col-md-4" role="alert">
                {{categoryMsg}}
            </div>
        </div>
        <div class="row mb-3">
            <label for="offer" class="col-md-1 col-form-label">Offer</label>
            <div class="col-md-3">
                {{!-- <input type="text" id="offer" class="form-control" name="offer"> --}}
                <select name="offer" id="offer" style="width: 250px;">
                    {{#each offerResult}}
                    <option value="{{offerName}}">{{offerName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>


        <button type="submit" class="btn btn-dark mb-3">Add product</button>
    </form>
</div>