<div class="container minHeight">
    <div class="d-flex justify-content-between my-3">
        <h1 class="mt-5">Add New Offer</h1>
    </div>

    <form action="/admin/addNewOffer" method="post">
        <div class="row my-3">
            <label for="offer" class="col-md-2 col-form-label">Offer name</label>
            <div class="col-md-3">
                <input type="text" name="offer" class="form-control" id="offer">
            </div>
            <div class="col-md-4" role="alert">
                {{offerMsg}}
            </div>
        </div>

        <div class="row my-3">
            <label for="discount" class="col-md-2 col-form-label">Discount %</label>
            <div class="col-md-3">
                <input type="text" name="discount" class="form-control" id="discount">
            </div>
            <div class="col-md-4" role="alert">
                {{discountMsg}}
            </div>
        </div>

        <button type="submit" class="btn btn-dark mb-3">Add offer</button>
    </form>
</div>