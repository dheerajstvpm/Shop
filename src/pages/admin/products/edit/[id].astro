---
import Layout from "../../../layouts/Layout.astro";
import dbConnect from "../../../lib/db";
import Product from "../../../models/productModel";
import Category from "../../../models/categoryModel";
import Offer from "../../../models/offerModel";
import { actions } from "astro:actions";

const admin = Astro.locals.admin;
if (!admin) {
    return Astro.redirect("/admin/login");
}

const { id } = Astro.params;
await dbConnect();

const product = await Product.findById(id).lean();
if (!product) {
    return Astro.redirect("/admin/products");
}

const categories = await Category.find({}).lean();
const offers = await Offer.find({}).lean();

const result = Astro.getActionResult(actions.admin.editProduct);
if (result && !result.error && result.data?.success) {
    return Astro.redirect("/admin/products");
}
---

<Layout title={`Edit Product | ${product.productName}`} admin={true}>
    <div class="container minHeight">
        <div
            class="d-flex justify-content-between my-3 border-bottom align-items-center"
        >
            <h1>Edit Product</h1>
            <a href="/admin/products" class="btn btn-dark">Back</a>
        </div>

        {
            result?.data?.error && (
                <div class="alert alert-danger">{result.data.error}</div>
            )
        }

        <form
            method="POST"
            action={actions.admin.editProduct}
            enctype="multipart/form-data"
            class="row g-3 mb-5"
        >
            <input type="hidden" name="id" value={product._id.toString()} />

            <div class="col-md-6">
                <label for="productName" class="form-label">Product Name</label>
                <input
                    type="text"
                    class="form-control"
                    name="productName"
                    value={product.productName}
                    required
                />
            </div>
            <div class="col-md-6">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" name="category" required>
                    <option value="">Select Category</option>
                    {
                        categories.map((cat) => (
                            <option
                                value={cat.categoryName}
                                selected={cat.categoryName === product.category}
                            >
                                {cat.categoryName}
                            </option>
                        ))
                    }
                </select>
            </div>

            <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <textarea
                    class="form-control"
                    name="description"
                    rows="3"
                    required>{product.description}</textarea
                >
            </div>

            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input
                    type="number"
                    class="form-control"
                    name="price"
                    value={product.price}
                    required
                />
            </div>
            <div class="col-md-4">
                <label for="stock" class="form-label">Stock</label>
                <input
                    type="number"
                    class="form-control"
                    name="stock"
                    value={product.stock}
                    required
                />
            </div>
            <div class="col-md-4">
                <label for="offer" class="form-label">Offer</label>
                <select class="form-select" name="offer">
                    <option value="">No Offer</option>
                    {
                        offers.map((off) => (
                            <option
                                value={off.offerName}
                                selected={off.offerName === product.offer}
                            >
                                {off.offerName}
                            </option>
                        ))
                    }
                </select>
            </div>

            <div class="col-12 border p-3 rounded mt-3">
                <h5>Current Images</h5>
                <div class="d-flex gap-3 mb-3">
                    <img
                        src={`/images/image1${product._id}.jpg`}
                        style="width: 100px; height: 100px; object-fit: contain;"
                        class="border"
                    />
                    <img
                        src={`/images/image2${product._id}.jpg`}
                        style="width: 100px; height: 100px; object-fit: contain;"
                        class="border"
                    />
                    <img
                        src={`/images/image3${product._id}.jpg`}
                        style="width: 100px; height: 100px; object-fit: contain;"
                        class="border"
                    />
                </div>
                <p class="text-muted small">
                    Upload new images to replace existing ones.
                </p>

                <div class="row">
                    <div class="col-md-4">
                        <label for="image1" class="form-label"
                            >Replace Image 1</label
                        >
                        <input
                            type="file"
                            class="form-control"
                            name="image1"
                            accept="image/*"
                        />
                    </div>
                    <div class="col-md-4">
                        <label for="image2" class="form-label"
                            >Replace Image 2</label
                        >
                        <input
                            type="file"
                            class="form-control"
                            name="image2"
                            accept="image/*"
                        />
                    </div>
                    <div class="col-md-4">
                        <label for="image3" class="form-label"
                            >Replace Image 3</label
                        >
                        <input
                            type="file"
                            class="form-control"
                            name="image3"
                            accept="image/*"
                        />
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary px-5"
                    >Update Product</button
                >
            </div>
        </form>
    </div>
</Layout>
