---
import Layout from "../../../layouts/Layout.astro";
import { actions } from "astro:actions";

const admin = Astro.locals.admin;
if (!admin) {
    return Astro.redirect("/admin/login");
}

const result = Astro.getActionResult(actions.admin.addCategory);

if (result && !result.error && result.data?.success) {
    return Astro.redirect("/admin/categories");
}
---

<Layout title="Shop.admin | Add Category" admin={true}>
    <div class="container minHeight">
        <div
            class="d-flex justify-content-between my-3 border-bottom align-items-center"
        >
            <h1>Add Category</h1>
            <a href="/admin/categories" class="btn btn-dark">Back</a>
        </div>

        {
            result?.data?.error && (
                <div class="alert alert-danger">{result.data.error}</div>
            )
        }

        <form
            method="POST"
            action={actions.admin.addCategory}
            class="col-md-6 mx-auto mt-5"
        >
            <div class="mb-3">
                <label for="category" class="form-label">Category Name</label>
                <input
                    type="text"
                    class="form-control text-center"
                    name="category"
                    placeholder="e.g. ELECTRIC"
                    required
                />
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary px-5"
                    >Add Category</button
                >
            </div>
        </form>
    </div>
</Layout>
