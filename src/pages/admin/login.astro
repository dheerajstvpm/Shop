---
import Layout from "../../layouts/Layout.astro";
import { actions } from "astro:actions";

const result = Astro.getActionResult(actions.admin.login);

if (result && !result.error && result.data?.success) {
    return Astro.redirect("/admin");
}
---

<Layout title="Shop.admin" admin={true}>
    <div class="container minHeight">
        <div class="d-flex justify-content-center my-3">
            <h1 class="mt-5 text-center">Login</h1>
        </div>

        <div class="container-fluid d-flex justify-content-center">
            <form class="col-md-4" method="POST" action={actions.admin.login}>
                {
                    result?.data?.error && (
                        <div
                            class="alert alert-danger text-center"
                            role="alert"
                        >
                            {result.data.error}
                        </div>
                    )
                }
                <div class="my-3">
                    <input
                        type="text"
                        name="username"
                        class="form-control text-center"
                        id="exampleInputUsername"
                        placeholder="Username"
                        required
                    />
                </div>
                <div class="mb-3">
                    <input
                        type="password"
                        name="password"
                        class="form-control text-center"
                        id="exampleInputPassword"
                        placeholder="Password"
                        required
                    />
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
            </form>
        </div>
    </div>
</Layout>
